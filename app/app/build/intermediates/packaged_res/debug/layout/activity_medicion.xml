<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medicion"
    android:background="@drawable/fondo_degradado">


    <TextView
        android:id="@+id/tvStatus"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="405dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Escuchando"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbConcentracion"
        android:layout_width="200dp"
        android:progressDrawable="@drawable/custom_progress"
        android:indeterminateOnly="false"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbTasa"
        android:layout_width="200dp"
        android:progressDrawable="@drawable/custom_progress"
        android:indeterminateOnly="false"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614" />

    <TextView
        android:id="@+id/tvConcentracion"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="800"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/pbConcentracion"
        app:layout_constraintEnd_toEndOf="@+id/pbConcentracion"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/pbConcentracion"
        app:layout_constraintTop_toTopOf="@+id/pbConcentracion"
        app:layout_constraintVertical_bias="0.421" />

    <TextView
        android:id="@+id/tvTasa"
        android:layout_width="86dp"
        android:layout_height="49dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="0.4"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/pbTasa"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/pbTasa"
        app:layout_constraintTop_toTopOf="@+id/pbTasa"
        app:layout_constraintVertical_bias="0.636" />

    <TextView
        android:id="@+id/tvCalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Adecuada"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="CO2 PPM"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pbConcentracion"
        app:layout_constraintEnd_toEndOf="@+id/pbConcentracion"
        app:layout_constraintTop_toTopOf="@+id/pbConcentracion"
        app:layout_constraintVertical_bias="0.676" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:text="PPM/s"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/pbTasa"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/pbTasa"
        app:layout_constraintTop_toTopOf="@+id/pbTasa" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Calidad de aire:"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>